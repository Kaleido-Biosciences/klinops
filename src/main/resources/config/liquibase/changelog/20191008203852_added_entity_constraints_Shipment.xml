<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity Shipment.
    -->
    <changeSet id="20191008203852-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="destination_id"
                                 baseTableName="shipment"
                                 constraintName="fk_shipment_destination_id"
                                 referencedColumnNames="id"
                                 referencedTableName="laboratory"/>

        <addForeignKeyConstraint baseColumnNames="study_id"
                                 baseTableName="shipment"
                                 constraintName="fk_shipment_study_id"
                                 referencedColumnNames="id"
                                 referencedTableName="clinical_study"/>

    </changeSet>
</databaseChangeLog>
